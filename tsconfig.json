{
  "compilerOptions": {
    /* ‚úÖ Modern and Fast */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* ‚öôÔ∏è Folder structure */
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",

    /* üí° Performance + DX */
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": false,
    "sourceMap": true,

    /* üß† Strict & Reliable */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}